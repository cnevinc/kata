class Solution {
    public int firstUniqChar(String s) {
        HashMap<Character, Integer> wordCount = new HashMap<>();
        for (int i = 0; i < s.length(); i++ ){
            char c = s.charAt(i);
            Integer count = wordCount.get(c) ;
            if (count == null ) {
                wordCount.put(c,1) ;
            } else {
                wordCount.put(c,++count) ;
            }
        }
        for (int i = 0; i < s.length(); i++ ){
            char c = s.charAt(i);
            Integer count = wordCount.get(c) ;
            if (count == 1 ) {
                return i;
            }
        }
        return -1;
        
    }
}
